# A sample Gemfile
source "https://rubygems.org"

gem 'rake'
gem 'activesupport'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-activerecord'
gem 'rack-protection'

gem 'puma'
gem 'tux'
gem 'pg'

# These gems are only installed when run as `bundle install --without production`
group :development, :test do
  gem 'pry-byebug'
  gem 'dotenv'
  gem 'shotgun'
end

# bundle install --without test --without development
group :production do
end
